<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:elevation="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="10dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_list_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            >

            <TextView
                android:id="@+id/product_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product 1"
                android:textStyle="bold"
                android:textSize="22sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_list_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView jdn;kajfkssjjfjdfksjdfbsjbfsfsbfbsjfshfhfhsfhfi;jifdfufdhgudguhhufhdfjjgbjdfjdjf"
                android:textSize="20sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="#808080"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
